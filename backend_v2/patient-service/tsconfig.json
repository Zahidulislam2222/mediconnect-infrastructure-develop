{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}